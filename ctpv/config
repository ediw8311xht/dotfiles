#!/usr/bin/bash

#set forceueberzug
#set forcechafa
#set forcekitty
#set chafasixel
set shell "/usr/bin/bash"

preview epub .epub {{
    a="$((w*h))"
    [[ "${a}" -gt 500 ]] && a="500"
    gnome-epub-thumbnailer -s "${a}" "${f}" "${cache_f}.png"
    setup_image
    send_image "${cache_f}.png"
}}

preview gzip application/gzip {{
    zcat "${f}"
}}

preview log text/x-log {{
    pygmentize "${f}"
}}

preview lisp .txt .lisp .fasl {{
    highlight "${f}" --stdout --out-format="ansi"
}}

preview jshtml .js .json .html {{
    highlight "${f}" --stdout --out-format="ansi"
}}

preview lua .lua {{
    highlight "${f}" --stdout --out-format="ansi"
}}

#preview mymd .md {{
#    mdt 
#}}

